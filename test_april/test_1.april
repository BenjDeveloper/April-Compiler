fn suma(valor:int, limite:int):int
{
    if valor >= limite 
    {
        return valor;
    }
    else 
    {
        println("valor: %d", valor);
        valor = valor + 1;
        suma(valor, limite);
    }
}

fn resta(a:int, b:int):int
{
    if (a == 6)
    {
        println("es 6 nena!!");
    }
    
    return a-b;
}

fn main():void
{
    ini := 10;
    var fin:int = -10;

    for ini > fin 
    {
        ini = resta(ini, 1);
        println("ini: %d", ini);
    }
    println("adios!!");
} 