fn resta(a:int, b:int):int
{
    return a-b;
}

fn main():void
{
    ini := 10;
    var fin:int = -10;

    for ini > fin 
    {
        ini = resta(ini, 1);
        _println("ini: %d", ini);
    }
    _println("adios!!");
} 

main();